<Page
    x:Class="MovieWorld.Views.SeriesListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
      xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:controls="using:Template10.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:MovieWorld.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:MovieWorld.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <vm:SeriesListPageViewModel x:ConnectionId='1' x:Name="ViewModel"/>
    </Page.DataContext>
    <Page.Resources>
        <CollectionViewSource x:Key="DiscoveredViewSource" IsSourceGrouped="True" Source="{Binding DiscoveredSeries}" ItemsPath="seasons"/>
    </Page.Resources>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="700"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Row="0" Grid.Column="0" PlaceholderText="Type the selected movie name here:" Text="{Binding SeriesName, Mode=TwoWay}" Background="Azure"/>
        <Button x:ConnectionId='2' Grid.Row="0" Grid.Column="1"                             Content="Check Serious out!" Background="Azure"/>
        <Button x:ConnectionId='3' Grid.Row="0" Grid.Column="2"                           Content="Return to Menu" Background="Azure"/>
        <StackPanel Grid.Row="1" Margin="18" Orientation="Vertical" MaxWidth="1400">
            <!-- TODO ItemSource Binding -->
            <GridView x:ConnectionId='4' Grid.Row="1"
                  Padding="18"
                  ItemsSource="{Binding Source={StaticResource DiscoveredViewSource}}"
                  IsItemClickEnabled="True"
                                          >
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <Grid Width="1000" Height="250">
                            <!-- TODO Binding -->
                            <Button x:ConnectionId='5' Content="{Binding name}" Background="Azure"                      Margin="-12,0,0,0"/>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
                <GridView.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <!-- TODO Binding -->
                                <Button x:ConnectionId='6' Content="{Binding name}" Background="Azure"                      Margin="-12,0,0,0"/>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                    </GroupStyle>
                </GridView.GroupStyle>
            </GridView>

        </StackPanel>

    </Grid>
</Page>

